{
    "manifest_version": 3,
    "name": "Better GitHub",
    "version": "1.0.0",
    "author": "Kale Ko",
    "description": "An extension to improve the GitHub experience",
    "icons": {
        "16": "assets/logo@16.png",
        "32": "assets/logo@32.png",
        "64": "assets/logo@64.png",
        "128": "assets/logo@128.png"
    },
    "action": {
        "default_icon": {
            "16": "assets/logo@16.png",
            "32": "assets/logo@32.png",
            "64": "assets/logo@64.png",
            "128": "assets/logo@128.png"
        },
        "default_popup": "src/options.html"
    },
    "content_scripts": [
        {
            "matches": [
                "https://github.com/*"
            ],
            "css": [],
            "js": [
                "lib/zip.js",
                "src/index.js"
            ]
        }
    ],
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://github.com/*",
        "https://api.github.com/*"
    ]
}